{
    "name": "miniloader-migration",
    "version": "1.0.0",
    "title": "Modernized Miniloader Migration",
    "description": "Migrate Miniloaders used in Factorio 1.x saves to Loaders Modernized for use in Factorio 2.x",
    "author": "kryojenik",
    "contact": "https://github.com/kryojenik/miniloader-migration",
    "homepage": "https://github.com/kryojenik/miniloader-migration",
    "source": "https://github.com/kryojenik/miniloader-migration",
    "factorio_version": "2.0",
    "dependencies": [
        "base >= 2.0.23",
        "flib >= 0.16.0",
        "? space-age >= 2.0.23",
        "loaders-modernized >= 0.8.3"
    ],
    "package": {
        "git_publish_branch": "main",
        "ignore": [
            "TODO.md",
            "types.lua",
            "screenshots/*"
        ],
        "sync_portal_details": false,
        "no_git_push": true
    }
}
